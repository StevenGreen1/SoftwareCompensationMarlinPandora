<!-- Pandora settings xml file -->

<pandora>
    <!-- GLOBAL SETTINGS -->
    <IsMonitoringEnabled>true</IsMonitoringEnabled>
    <ShouldDisplayAlgorithmInfo>false</ShouldDisplayAlgorithmInfo>
    <ShouldCollapseMCParticlesToPfoTarget>true</ShouldCollapseMCParticlesToPfoTarget>

    <!-- PLUGIN SETTINGS -->
    <HadronicEnergyCorrectionPlugins>EnergyCorrectionSC</HadronicEnergyCorrectionPlugins>
    <EnergyCorrectionSC>
        <SCEnergyConstantsHighE> 2.47822 -0.0273163 0.000431585 -0.128046 -0.00122036 -1.88328e-05 0.460827 0.633081 -0.0597235 </SCEnergyConstantsHighE>
        <SCEnergyConstantsSmallE> 2.47822 -0.0273163 0.000431585 -0.128046 -0.00122036 -1.88328e-05 0.460827 0.633081 -0.0597235 </SCEnergyConstantsSmallE>
        <Cheating> 0 </Cheating>
        <TrueEnergy> 0. </TrueEnergy>
